FROM atlasamglab/stats-base:root6.22.02-python3.8
LABEL org.opencontainers.image.ref.name=latest

USER root
WORKDIR /home

SHELL ["/bin/bash", "-c"]

RUN apt-get -qq -y update && \
    DEBIAN_FRONTEND=noninteractive apt-get -qq -y install --no-install-recommends \
    tk && \
    apt-get -y autoclean && \
    apt-get -y autoremove && \
    rm -rf /var/lib/apt/lists/*

RUN python3 -m pip install --no-cache-dir -U pip wheel setuptools && \
    python3 -m pip install --no-cache-dir -U pandas matplotlib numpy uproot hist pyhf jsonpatch awkward cabinetry h5py

ENTRYPOINT ["/bin/bash", "-l", "-c"]
CMD [ "/bin/bash" ]
